extends layout

block content
  .container
    form#order-form.form-inline
      #user-container
        .row
          .span12
            input#cust-name(type="text", placeholder="Your name...", name="customer[name]")
            &nbsp;
            input#phone-number(type="text", placeholder="Your cell number...", name="customer[number]")
      #order-container
        .row.order-row
          .span12
            p I would like a&nbsp;
              select.caff-level(name="order[0][strength]")
                option(value="full") full strength
                option(value="decaf") decaffeinated
                option(value="half-caff") half caff
              | &nbsp;&nbsp;
              select.coffee-type(name="order[0][coffeeType]")
                option(value="americano") Americano
                option(value="latte") Caffè latte
                option(value="latte") Caffè mocha
              | &nbsp;with&nbsp;
              select.milk-type(name="order[0][milkType]")
                option(value="full-fat") full fat
                option(value="skim") skim
              | &nbsp;milk.
        .row
          .span1
            button#order-button.btn.btn-primary.btn-large Order

block late-scripts
  script(src="js/customer.js")
      
